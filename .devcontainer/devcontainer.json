{
    "name": "Plutchik Emotions",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "forwardPorts": [8000],
    "postCreateCommand": "echo 'Dev container ready! Run: python -m http.server 8000'",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ritwickdey.LiveServer"
            ],
            "settings": {
                "liveServer.settings.port": 8000
            }
        }
    },
    "portsAttributes": {
        "8000": {
            "label": "Web App",
            "onAutoForward": "openBrowser"
        }
    }
}
